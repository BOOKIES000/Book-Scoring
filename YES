  <select id="genre"></select>

  <label for="pages">Enter Page Count:</label>
  <input type="number" id="pages" min="0" placeholder="e.g. 120">

  <button onclick="calculateScore()">Get Score</button>

  <div id="score"></div>

  <script>
    const data = {
      Kids: {
