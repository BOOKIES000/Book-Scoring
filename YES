        "Classics / Historical Reads": [25, 30, 40, 45, 50],
      },
      Adults: {
        "Short Fiction": [10, 15, 20, 25, 30],
        "Novels": [15, 20, 25, 30, 35],
        "Long Novels": [18, 22, 28, 35, 40],
        "Fantasy / Adventure": [20, 25, 30, 35, 40],
        "Mystery / Thriller": [20, 25, 30, 35, 40],
